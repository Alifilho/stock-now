{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "resolveJsonModule": true,
    "lib": ["dom", "es2017"],
    "alwaysStrict": true,
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules"]
}
